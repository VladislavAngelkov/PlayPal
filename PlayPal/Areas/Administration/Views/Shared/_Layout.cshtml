@using PlayPal.Common

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayPal</title>
    <link rel="stylesheet" href="~/css/CosmoBootswatchTheme/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CosmoBootswatchTheme/_bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CosmoBootswatchTheme/_variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayPal.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" asp-append-version="true" />
</head>
<body>
    <header >
        <partial name="_NotificationsPartial" />
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand active">PlayPal</a>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Administration" asp-controller="Report" asp-action="All">
                                Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Administration" asp-controller="Ban" asp-action="All">
                                Bans
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Administration" asp-controller="Field" asp-action="All">Fields</a>
                        </li>
                        <li class="nav-item dropdown active">
                            <a class="nav-link dropdown-toggle active" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Messages</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Administration" asp-controller="Message" asp-action="All">Manage Messages</a>
                                <a class="dropdown-item" asp-area="Administration" asp-controller="Message" asp-action="Sent">Sent Messages</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Administration" asp-controller="Player" asp-action="Search">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Administration" asp-controller="Administrator" asp-action="Promote">
                                Promote Administrator
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <hr />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:darkorange;">
        <div class="container" style="color:white">
            &copy; @ApplicationConstants.YearOfRelease
            @if (DateTime.UtcNow.Year>ApplicationConstants.YearOfRelease)
            {
                <a>-@DateTime.UtcNow.Year</a>
            }
             - PlayPal
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
