@model ReportInputModel
@using PlayPal.Data.Models.Enums

@{
    TempData["Title"] = "Add Report";
}

<div class="text-center">
    <h2>
        @TempData["Title"]
    </h2>
</div>

<div class="row align-content-center">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <form method="post" asp-area="" asp-controller="Report" asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Id" type="hidden" value=@Model.Id />
            <input asp-for="@Model.ReportedPlayerId" type="hidden" value=@Model.ReportedPlayerId />
            <input asp-for="@Model.ReportingPlayerId" type="hidden" value=@Model.ReportingPlayerId />
            <input asp-for="@Model.ReturnUrl" type="hidden" value=@Model.ReturnUrl />
            <div class="form-group">
                <label asp-for="@Model.Reason" class="form-label mt-4 active">Select Reason</label>
                <select asp-for="@Model.Reason" class="form-select" id="exampleSelect1">
                    <option value="@Reason.DangerousPlay">Danegrous Play</option>
                    <option value="@Reason.SkippingOrLeavingGame">Skipping or leaving the Game</option>
                    <option value="@Reason.Insults">Insults</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success" style="width:100%">Report</button>
        </form>
    </div>
    <div class="col-md-3">
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
