@model RegisterUserInputModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="RegisterAsPlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Id" type="hidden" value=@Model.Id />
            <input asp-for="@Model.Email" type="hidden" value=@Model.Email />
            <input asp-for="@Model.Password" type="hidden" value=@Model.Password />
            <input asp-for="@Model.ConfirmPassword" type="hidden" value=@Model.ConfirmPassword />

            <div class="form-group">
                <label asp-for="@Model.Player!.Name" class="form-label mt-4">Name</label>
                <input asp-for="@Model.Player!.Name" class="form-control" placeholder="Name">
                <span asp-validation-for="@Model.Player!.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Player!.City" class="form-label mt-4">City</label>
                <input asp-for="@Model.Player!.City" class="form-control" placeholder="City">
                <span asp-validation-for="@Model.Player!.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Player!.Position" class="form-label mt-4">Select position</label>
                <select asp-for="@Model.Player.Position" class="form-select" id="exampleSelect1">
                    @foreach (var pos in @Model.Player.Positions)
                    {
                        <option value="@pos.Id">@pos.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ProfilePicture" class="form-label mt-4">Choose Profile Picture</label>
                <input asp-for="@Model.ProfilePicture" class="form-control" type="file" id="formFile" />
            </div>

            <br />
            <button asp-controller="Account" asp-action="RegisterAsPlayer" type="submit" class="btn btn-success" style="width:100%">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
