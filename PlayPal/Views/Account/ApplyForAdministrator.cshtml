@model RegisterUserInputModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <form method="post" asp-controller="Account" asp-action="ApplyForAdministrator">
            <input asp-for="Id" type="hidden" value=@Model.Id />
            <div class="form-group">
                <label asp-for=Email class="form-label mt-4">Email address</label>
                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label mt-4">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label mt-4">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Administrator!.FirstName" class="form-label mt-4">First Name</label>
                <input asp-for="@Model.Administrator!.FirstName" class="form-control" placeholder="First Name">
                <span asp-validation-for="@Model.Administrator!.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Administrator!.LastName" class="form-label mt-4">Last Name</label>
                <input asp-for="@Model.Administrator!.LastName" class="form-control" placeholder="Last Name">
                <span asp-validation-for="@Model.Administrator!.LastName" class="text-danger"></span>
            </div>

            <br />
            <button asp-controller="Account" asp-action="ApplyForAdministrator" type="submit" class="btn btn-success">Apply</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
