@model ChangePasswordInputModel

@{
    TempData["Title"] = "Change Password";
}

<div class="text-center">
    <h1>
        @TempData["Title"]
    </h1>
</div>

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <form method="post" asp-area="" asp-controller="Account" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=@Model.OldPassword class="form-label mt-4">Old Password</label>
                <input asp-for="@Model.OldPassword" type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.OldPassword" value="@Model.OldPassword">
                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="form-label mt-4">New Password</label>
                <input asp-for="@Model.NewPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="@Model.NewPassword" value="@Model.NewPassword">
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword" class="form-label mt-4">Confirm Password</label>
                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="@Model.ConfirmPassword" value="@Model.ConfirmPassword">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mt-2" style="width:100%">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
