@model LoginUserInputModel


<br />
<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <div>
            <h1>
                Log in
            </h1>
        </div>
        <form method="post">
            <div class="form-group">
                <label asp-for=Email class="form-label mt-4">Email address</label>
                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label mt-4">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <br />
            <button asp-area="" asp-controller="Account" asp-action="Login" type="submit" class="btn btn-success">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
